<?xml version="1.0" encoding="utf-8" ?>
<t:SlideMenuView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:t="clr-namespace:SlideOverKit" x:Class="bBall.SideMenu.Menu2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />            
            <RowDefinition Height="1" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" BackgroundColor="LightGray" HasShadow="False" Padding="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.Row="0" Source="ikona_user.png" WidthRequest="25" HeightRequest="25" HorizontalOptions="End" VerticalOptions="Center" BackgroundColor="Transparent"/>
                <Label x:Name="_lbnUserName" Text="" Grid.Column="1" Grid.Row="0" XAlign="Start" YAlign="Center" TextColor="Black" BackgroundColor="Transparent" FontAttributes="Bold"/>
            </Grid>
        </Frame>
        <Frame x:Name="_frm_Buymore" Grid.Row="1" BackgroundColor="WhiteSmoke" HasShadow="False" Padding="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.Row="0" Source="ball_blue.png" WidthRequest="25" HeightRequest="25" HorizontalOptions="End" VerticalOptions="Center"/>
                <Label Text="Buy more BBals" Grid.Column="1" Grid.Row="0" XAlign="Start" YAlign="Center" TextColor="Black"/>
                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="" TextColor="Transparent" BackgroundColor="Transparent" Clicked="onBuyMoreClick" />
            </Grid>
        </Frame>
