        <Frame x:Name="_frm_Help" Grid.Row="2" BackgroundColor="WhiteSmoke" HasShadow="False" Padding="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.Row="0" Source="settings_icon_dark.png" WidthRequest="25" HeightRequest="25" HorizontalOptions="End" VerticalOptions="Center"/>
                <Label Text="Help and Feedback" Grid.Column="1" Grid.Row="0" XAlign="Start" YAlign="Center" TextColor="Black"/>
                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="" TextColor="Transparent" BackgroundColor="Transparent" Clicked="onHelpClick" />
            </Grid>
        </Frame>


        <Frame Grid.Row="3" BackgroundColor="Black" HasShadow="False"/>

        <Frame x:Name="_frm_Logout" Grid.Row="4" BackgroundColor="WhiteSmoke" HasShadow="False" Padding="0,0,0,0">
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Label Text="Log out" Grid.Column="1" Grid.Row="0" FontSize="18" XAlign="Start" YAlign="Center" TextColor="Black"/>
                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="" TextColor="Transparent" BackgroundColor="Transparent" Clicked="onLogOutClicked" />
            </Grid>
        </Frame>



